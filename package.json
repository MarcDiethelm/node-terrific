{
	"name": "xtc",
	"description": "A frontend framework and server",
	"version": "0.8.0-beta6",
	"private": true,
	"dependencies": {
		"express": "~3.3.0",
		"express3-handlebars": "~0.5.0",
		"convict": "~0.4.0",
		"hipsum": ">=0.2.0",
		"lodash-node": "~2.4.0",
		"range_check": "~0.0.4",
		"handlebars": "~1.3.0",
		"grunt": "~0.4.0",
		"grunt-less-imports": "~0.9.0",
		"assemble-less": "0.7.0",
		"grunt-glue-nu": "0.3.1",
		"grunt-contrib-jshint": "~0.8.0",
		"grunt-contrib-concat": "~0.3.0",
		"grunt-contrib-cssmin": "~0.7.0",
		"grunt-contrib-uglify": "~0.2.0",
		"grunt-contrib-watch": "~0.5.0",
		"grunt-contrib-clean": "~0.5.0"
	},
	"devDependencies": {
		"mocha": "~1.16.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/marcdiethelm/xtc.git"
	},
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"test": "mocha",
		"build"     : "grunt --base=./",
		"build-dist": "grunt --base=./ --dist",
		"mkmod"     : "yo xtc:module --path=./",
		"mkskin"    : "yo xtc:skin --path=./"
	},
	"engines": { "node" : ">=0.8.0" },
	"configPath": "_config/"
}
