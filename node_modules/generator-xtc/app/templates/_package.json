{
  "name": "<%= name %>",
  "version": "0.0.0",
  "private": true,
  "repository": "<%= repository.uri %>",
  "dependencies": {
    "xtc": "<%= xtcVersion %>"
  },
  "scripts": {
    "start"     : "node node_modules/xtc",
    "build"     : "grunt --base=./node_modules/xtc",
    "build-dist": "grunt --base=./node_modules/xtc --dist",
    "mkmod"     : "yo xtc:module --path=node_modules/xtc",
    "mkskin"    : "yo xtc:skin --path=node_modules/xtc"
  },
  "configPath": "_config/"
}
